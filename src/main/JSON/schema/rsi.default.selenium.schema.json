{
  "id": "https://ruralsourcing.com/test.cases.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "Selenium data driven test.",
  "type": "object",
  "required": [
    "testCase",
    "browsers",
    "steps"
  ],
  "properties": {
    "testCase": {
      "description": "Test case description.",
      "type": "string"
    },
    "browsers": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/browser"
      }
    },
    "steps": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/step"
      }
    }
  },
  "definitions": {
    "step": {
      "type": "object",
      "required": [
        "name"
      ],
      "properties": {
        "name": {
          "type": "string",
          "description": "Step name."
        },
        "description": {
          "type": "string",
          "description": "Short description of what the tester is doing."
        },
        "locatorType": {
          "type": "string",
          "description": "Choose any of the locators type to located the element. id, name, cssSelector, xpath, tagName, linkText."
        },
        "locator": {
          "type": "string",
          "description": "Elements' locator string, make sure it match the locator type."
        },
        "value": {
          "type": "string",
          "description": "Value given by the user to verify and compare."
        }
      }
    },
    "browser": {
      "type": "object",
      "required": [
        "name",
        "runType"
      ],
      "properties": {
        "name": {
          "type": "string",
          "description": "The name of the browser to test."
        },
        "runType": {
          "type": "string",
          "description": "Browser type."
        }
      }
    }
  }
}